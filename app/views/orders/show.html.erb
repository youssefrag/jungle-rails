<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %>
    </h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! See your order summary below</h4>
  </div>
  <table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |line_item| %>
      <%= render 'line_item', product: Product.find(line_item[:product_id]), quantity: line_item[:quantity].to_i %>
    <% end %>
  </tbody>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>